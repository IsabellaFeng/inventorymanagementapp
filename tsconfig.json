{
    "compilerOptions": {
        "target": "es5",
        "lib": [
            "dom",
            "es2015",
            "es2017",
            "esnext"
        ],
        "jsx": "react-jsx",
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node",
    },
    "include": [
        "src"
    ]
}